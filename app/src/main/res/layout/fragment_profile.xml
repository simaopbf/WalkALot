<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="#fae4de">

    <!-- TODO: Update blank fragment layout
     Put default values on android:text
     -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="10dp"
        android:text="Daily Goals"
        android:textColor="@color/blue"
        android:textSize="45sp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/goalsImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goalsicon" />

    <EditText
        android:id="@+id/stepsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="220dp"
        android:background="#ECEEE8"
        android:hint="STEPS"
        android:inputType="number"
        android:text="10000"
        android:textSize="25sp"
        android:padding="10dp" />


    <ImageView
        android:id="@+id/stepsImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/steps" />



    <ImageView
        android:id="@+id/plusSteps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:layout_marginTop="220dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/minusSteps"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:src="@drawable/minus"
        />

    <EditText
        android:id="@+id/KcalEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="320dp"
        android:background="#ECEEE8"
        android:hint="KCAL"
        android:inputType="number"
        android:text="---"
        android:textSize="25sp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/KcalImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/kcal" />

    <ImageView
        android:id="@+id/plusKcal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:layout_marginTop="320dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/minusKcal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="320dp"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:src="@drawable/minus" />

    <EditText
        android:id="@+id/distEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="420dp"
        android:background="#ECEEE8"
        android:hint="DISTANCE(KM)"
        android:text="---"
        android:inputType="number"
        android:textSize="25sp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/distImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="420dp"
        android:src="@drawable/distance" />

    <ImageView
        android:id="@+id/plusDist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:layout_marginTop="420dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/minusDist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:src="@drawable/minus" />

    <EditText
        android:id="@+id/timeEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="520dp"
        android:background="#ECEEE8"
        android:hint="TIME(MIN)"
        android:text="---"
        android:inputType="number"
        android:textSize="25sp"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/timeImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="520dp"
        android:src="@drawable/time" />

    <ImageView
        android:id="@+id/plusTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plus"
        android:layout_marginTop="520dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"/>

    <ImageView
        android:id="@+id/minusTime"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:layout_gravity="left"
        android:layout_marginLeft="30dp"
        android:src="@drawable/minus" />

    <Button
        android:id="@+id/save_btn1"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="30sp"
        />


</FrameLayout>
