<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@drawable/background">

    <!-- TODO: Update blank fragment layout
     Put default values on android:text
     -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Daily Goals"
        android:textColor="#e8faf8"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_gravity="top|center_horizontal"
        />

    <!--
    <ImageView
        android:id="@+id/goalsImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:src="@drawable/goalsicon" />
    -->

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:id="@+id/TDEEImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/fitnessicon" />

        <!--
    <TextView
        android:id="@+id/TDEE"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/fitnessicon"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="50dp"
        android:gravity="center"
        android:textSize="18dp" />
         -->
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="190dp"
        android:layout_marginStart="60dp"
        android:layout_gravity="top|start"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/black"
        >

        <ImageView
            android:id="@+id/stepsImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/steps"/>

        <NumberPicker
            android:id="@+id/stepGoal"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@color/light_orange" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="60dp"
        android:layout_gravity="top|end"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/black"
        >

        <ImageView
            android:id="@+id/KcalImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/kcal" />

        <NumberPicker
            android:id="@+id/calsGoal"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@color/light_orange" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="60dp"
        android:layout_gravity="center|start"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/black"
        >

        <ImageView
            android:id="@+id/distImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/distance" />

        <NumberPicker
            android:id="@+id/distGoal"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@color/light_orange" />

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="210dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="60dp"
        android:layout_gravity="center|end"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp"
        android:backgroundTint="@color/black"
        >

        <ImageView
            android:id="@+id/timeImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/time" />

        <NumberPicker
            android:id="@+id/timeGoal"
            android:layout_width="80dp"
            android:layout_height="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:background="@color/light_orange" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/save_btn1"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/light_orange"
        android:text="Save"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="25sp"
        />


</FrameLayout>